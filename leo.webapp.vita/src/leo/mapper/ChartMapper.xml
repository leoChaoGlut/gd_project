<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="leo.mapper.ChartMapper">
	<insert id="insertOne" parameterType="Chart">
		INSERT INTO
		vita_chart
		(email,json,type_id)
		VALUES
		(#{email},#{json},#{typeId})
	</insert>
	<select id="selectMore" resultType="ChartPreview">
		SELECT
		vc.id,
		vt.id AS typeId,
		vt.`name` AS typeName
		FROM
		vita_chart vc
		JOIN vita_type vt ON vc.type_id
		= vt.id
		WHERE
		vc.email = #{email};
	</select>

	<!-- <delete id="deleteOnePhysically"> DELETE FROM vita_chart WHERE id = 
		#{id} </delete> -->
	<update id="deleteOneByStatus">
		UPDATE vita_chart
		SET has_deleted = 1
		WHERE
		id = #{id}
	</update>

</mapper>